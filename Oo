NSString *metalKernelString = @"\
#include <metal_stdlib>\n\
using namespace metal;\n\
\n\
#include <CoreImage/CoreImage.h>\n\
\n\
kernel half4 simpleAdjustment(texture2d<half> input [[texture(0)]], sampler samplerInput [[sampler(0)]], float adjustment, uint2 gid [[thread_position_in_grid]]) {\n\
    half4 pixelColor = input.read(gid);\n\
    pixelColor.rgb = pixelColor.rgb + adjustment;\n\
    return pixelColor;\n\
}";
