// 创建绕Y轴旋转的动画
CABasicAnimation *rotationAnimation = [CABasicAnimation animationWithKeyPath:@"rotation.y"];
rotationAnimation.toValue = @(M_PI * 2);  // 360度旋转
rotationAnimation.duration = 5;  // 你可以调整这个持续时间

// 创建沿Z轴向下移动的动画
CABasicAnimation *translationAnimation = [CABasicAnimation animationWithKeyPath:@"position.z"];
translationAnimation.byValue = @10;
translationAnimation.duration = 5;

// 创建从当前大小缩放到2倍的动画
CABasicAnimation *scaleAnimation = [CABasicAnimation animationWithKeyPath:@"scale"];
scaleAnimation.fromValue = [NSValue valueWithSCNVector3:SCNVector3Make(1, 1, 1)];
scaleAnimation.toValue = [NSValue valueWithSCNVector3:SCNVector3Make(2, 2, 2)];
scaleAnimation.duration = 5;

// 将所有动画添加到动画组
CAAnimationGroup *group = [CAAnimationGroup animation];
group.duration = 5;
group.animations = @[rotationAnimation, translationAnimation, scaleAnimation];

// 将动画组添加到节点
[yourNode addAnimation:group forKey:@"combinedAnimation"];
